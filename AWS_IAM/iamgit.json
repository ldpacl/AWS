{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "UserGroup1": {
            "Type": "AWS::IAM::Group",
            "Properties": {
              "GroupName": "s3fullaccess",
              "ManagedPolicyArns": [
                "arn:aws:iam::aws:policy/AmazonS3FullAccess"
              ]
            }
          },
          "UserGroup2": {
            "Type": "AWS::IAM::Group",
            "Properties": {
                "GroupName": "ec2fullaccess",
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/AmazonEC2FullAccess"
                ]
            }
        },
        "User1":{
            "Type":"AWS::IAM::User",
            "Properties":{
                "UserName": "name1",
                "LoginProfile":{
                    "Password" : "password1",
                    "PasswordResetRequired" : false
                  },               
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/AmazonRDSFullAccess"
                ],
                "Groups": [
                    { 
                        "Ref": "UserGroup1"
                    }
                ]
            }
        },
        "User2":{
            "Type":"AWS::IAM::User",
            "Properties": {
                "UserName": "name2",
                "LoginProfile":{
                    "Password" : "password2",
                    "PasswordResetRequired" : false
                  },
                "Groups": [
                    {
                        "Ref": "UserGroup2"
                    }
                ]
            }
        },
        "Role1":{
            "Type":"AWS::IAM::Role",
            "Properties":{
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect":"Allow",
                            "Principal": {
                                "Service": "ec2.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "ManagedPolicyArns":[
                    "arn:aws:iam::aws:policy/AmazonS3ReadOnlyAccess"
                ]
            }
        }
    }
}